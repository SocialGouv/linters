{
  "devDependencies": {
    "husky": "^4.2.5",
    "lerna": "^3.22.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lerna run --concurrency 1 --stream precommit",
      "pre-push": "lerna run --concurrency 1 --stream prepush"
    }
  },
  "private": true,
  "scripts": {
    "lint": "lerna run --parallel --stream lint",
    "test": "lerna run --parallel --stream test"
  },
  "workspaces": [
    "packages/*"
  ]
}
